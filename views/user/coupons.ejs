<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MuscleBlaze</title>
    <link rel="stylesheet" href="styles.css">

 
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">    
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="coupon.css">

</head>
<body>
    <%- include('../../views/partials/user/header') %>

    <div class="profile-container">
        <%- include('../../views/partials/user/profileSidebar') %>  

        <div class="coupon-section">
            <h2 class="coupon-title">Available Coupons</h2>

            <% if (coupons.length > 0) { %>
                <!-- Table view for larger screens -->
                <table class="coupon-table">
                    <thead>
                        <tr>
                            <th>Coupon Name</th>
                            <th>Discount Type</th>
                            <th>Discount Value</th>
                            <th>Minimum Price</th>
                            <th>Expiry Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% coupons.forEach(coupon => { %>
                            <tr>
                                <td><%= coupon.name %></td>
                                <td><%= coupon.discountType === 'percentage' ? 'Percentage (%)' : 'Fixed Amount (₹)' %></td>
                                <td><%= coupon.discountValue %></td>
                                <td>₹<%= coupon.minimumPrice %></td>
                                <td><%= new Date(coupon.expireOn).toLocaleDateString() %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>

                <!-- Card view for smaller screens -->
                <div class="coupon-list">
                    <% coupons.forEach(coupon => { %>
                        <div class="coupon-card">
                            <div class="coupon-left">
                                <h3><%= coupon.name %></h3>
                                <p>Discount: <span><%= coupon.discountType === 'percentage' ? coupon.discountValue + '%' : '₹' + coupon.discountValue %></span></p>
                                <p>Min Purchase: <span>₹<%= coupon.minimumPrice %></span></p>
                                <p>Expires on: <span><%= new Date(coupon.expireOn).toLocaleDateString() %></span></p>
                            </div>
                            <div class="coupon-code-section">
                               

                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <p class="no-coupons">No coupons available at the moment.</p>
            <% } %>
        </div>
    </div>

    <%- include('../../views/partials/user/footer') %>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>


</html>