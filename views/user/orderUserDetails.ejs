    padding: 15px;
    border-radius: 8px;
    box-shadow: 0px 3px 8px rgba(0, 0, 0, 0.1);
    font-size: 18px;
    margin-top: 10px;
}

/* Cancel Message */
.cancel-message {
    color: red;
    font-weight: bold;
    background: #ffe6e6;
    padding: 12px;
    border-radius: 6px;
    margin-top: 15px;
    text-align: center;
}

/* Back Button */
.back-button {
    display: block;
    width: 200px;
    text-align: center;
    background: #FBBC04;
    color: black;
    padding: 12px;
    border-radius: 6px;
    text-decoration: none;
    font-size: 18px;
    font-weight: bold;
    margin: 30px auto 0;
    transition: background 0.3s ease;
}

.back-button:hover {
    background: #FBBC04;
}
.invoice-btn {
    display: inline-block;
    padding: 12px 24px;
    font-size: 16px;
    font-weight: 600;
    color: black;
    background: linear-gradient(135deg, #FBBC04, #FBBC04);
    border: none;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.3s ease-in-out;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
    margin-top: 10px;
}

.invoice-btn:hover {
    background: linear-gradient(135deg, #FBBC04, #FBBC04);
    transform: translateY(-2px);
    box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.3);
}

.no-invoice {
    font-size: 14px;
    color: #777;
    font-style: italic;
}
/* Responsive Design */
@media screen and (max-width: 1024px) {
    .orders-container {
        max-width: 90%;
        padding: 25px;
    }

    .orders-container h1 {
        font-size: 26px;
    }

    .orders-container h3 {
        font-size: 20px;
    }

    .orders-container p {
        font-size: 16px;
    }

    .product-item img {
        width: 90px;
        height: 90px;
    }

    .back-button {
        width: 180px;
        font-size: 16px;
    }
}

@media screen and (max-width: 768px) {
    .orders-container {
        max-width: 95%;
        padding: 20px;
    }

    .orders-container h1 {
        font-size: 24px;
    }

    .orders-container h3 {
        font-size: 18px;
    }

    .orders-container p {
        font-size: 15px;
    }

    .product-item {
        flex-direction: column;
        align-items: flex-start;
    }

    .product-item img {
        width: 80px;
        height: 80px;
        margin-bottom: 10px;
    }

    .address-box {
        font-size: 16px;
    }

    .back-button {
        width: 160px;
        font-size: 15px;
    }

    .invoice-btn {
        padding: 10px 20px;
        font-size: 14px;
    }
}

@media screen and (max-width: 480px) {
    .orders-container {
        padding: 15px;
    }

    .orders-container h1 {
        font-size: 22px;
    }

    .orders-container h3 {
        font-size: 16px;
    }

    .orders-container p {
        font-size: 14px;
    }

    .product-item img {
        width: 70px;
        height: 70px;
    }

    .address-box {
        font-size: 14px;
        padding: 12px;
    }

    .cancel-message {
        font-size: 14px;
        padding: 10px;
    }

    .back-button {
        width: 140px;
        font-size: 14px;
    }

    .invoice-btn {
        padding: 8px 16px;
        font-size: 13px;
    }
}




</style>

</head>
<body>
    <%- include('../../views/partials/user/header') %>

    <div class="profile-container">
        <%- include('../../views/partials/user/profileSidebar') %>  
      
        <div class="orders-container">
            <h1>Your Order Details</h1>
            <p><strong>Order ID:</strong> <%= order.orderId %></p>
            <p><strong>Status:</strong> <%= order.status %></p>
            <p><strong>Order Date:</strong> <%= orderDate %></p>
            <% if (order.status !== 'Cancelled') { %>
                <p><strong>Estimated Delivery:</strong> <%= deliveryDate %></p>
            <% } %>
            <p><strong>Total Price:</strong> <%= order.totalPrice %></p>
            <% if (order.couponApplied) { %>
              <p><strong>Coupon Name:</strong> <%= order.couponName %></p>
              <p><strong>Discount:</strong> ₹<%= order.discount %></p>
          <% } %>
            <p><strong>Payment Method:</strong> <%= order.paymentMethod%></p>
        
            <h3>Products Ordered:</h3>
            <div class="product-list">
                <% order.orderItems.forEach(item => { %>
                    <div class="product-item">
                      <img src="<%= item.product && item.product.productImage.length > 0 ? item.product.productImage[0] : 'default-image.jpg' %>" 
                      alt="<%= item.product ? item.product.productName : 'Product' %>">
                 
                        <div>
                            <p><strong>Product:</strong> <%= item.product ? item.product.productName : "Unknown" %></p>
                            <p><strong>Quantity:</strong> <%= item.quantity %></p>
                            <p><strong>Price:</strong> ₹<%= item.product.salePrice || item.product.price %></p>
                            <p><strong>Status:</strong> <%= item.status %></p>
                        
                            
                        </div>
                    </div>
                <% }); %>
            </div>
        
            <h3>Shipping Address:</h3>
            <div class="address-box">
                <p><%= address ? `${address.name}, ${address.landmark}, ${address.city}, ${address.district}, ${address.state} - ${address.pincode} | Phone: ${address.phone}` : "Address not available" %></p>
            </div>
        
            <% if (order.status === 'Cancelled' && cancelMessage) { %>
                <h3>Admin Message:</h3>
                <p class="cancel-message"><strong>Reason:</strong> <%= cancelMessage %></p>
            <% } %>



            <!-- <% if (invoiceUrl) { %>
              <a href="<%= invoiceUrl %>" class="invoice-btn" target="_blank">Download Invoice</a>
          <% } else { %>
              <p class="no-invoice">No invoice available</p>
          <% } %>
           -->
           <a href="/invoice/<%= order._id %>" class="btn invoice-btn" target="_blank">View Invoice</a>


        
            <!-- Back to Orders Button -->
            <a href="/orders" class="back-button">⬅ Back to Orders</a>
        </div>
        
        
        
        
    </div>
    
    <%- include('../../views/partials/user/footer') %>
    



    
</body>
</html>


