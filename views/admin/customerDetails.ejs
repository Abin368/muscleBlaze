<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - User Management</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/sidebar.css">
    <link rel="stylesheet" href="/customerDetails.css">
</head>
<body>
    <div class="container">
      
        <%- include('../../views/partials/admin/sidebar') %>
       
        <div class="main-content">
            <h1>User Management</h1>
            
            <!-- Search Bar -->
            <div class="search-bar">
                <form action="/admin/users" method="GET" id="searchForm">
                    <input type="text" name="search" placeholder="Search users..." value="<%= search %>" id="searchInput">
                    <button type="submit"><i class="fas fa-search"></i></button>
                </form>
            </div>
            

            <!-- User Table -->
            <div class="users-container">
            <table>
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i = 0; i < data.length; i++) { %>
                        <tr>
                            <td><%= (page - 1) * limit + i + 1 %></td> 
                            <td><%= data[i].name %></td>
                            <td><%= data[i].email %></td>
                            <td><%= data[i].phone %></td>
                            <td><%= data[i].address %></td>
                            <td>
                                <% if (!data[i].isBlocked) { %>
                                    <button class="btn btn-danger" style="width: 80px;"
                                        onclick="confirmBlock('<%= data[i]._id %>')">
                                        Block
                                    </button>
                                <% } else { %>
                                    <button class="btn btn-success" style="width: 80px;"
                                        onclick="confirmUnblock('<%= data[i]._id %>')">
                                        Unblock
                                    </button>
                                <% } %>
                            </td>
                            
                        </tr>
                    <% } %>
                </tbody>
                
                
                
            </table>
            </div>

          

            <div class="pagination">
                <% if (page > 1) { %>
                    <a href="#" class="page-link" data-page="<%= page - 1 %>">Previous</a>
                <% } %>
            
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <a href="#" class="page-link <%= i === page ? 'active' : '' %>" data-page="<%= i %>"><%= i %></a>
                <% } %>
            
                <% if (page < totalPages) { %>
                    <a href="#" class="page-link" data-page="<%= page + 1 %>">Next</a>
                <% } %>
            </div>
            
            
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
document.addEventListener("DOMContentLoaded", function () {

    document.getElementById("searchForm").addEventListener("submit", function (e) {
        e.preventDefault();
        fetchUsers(1); 
    });

    
    document.body.addEventListener("click", function (e) {
        if (e.target.classList.contains("page-link")) {
            e.preventDefault();
            let page = e.target.getAttribute("data-page");
            fetchUsers(page); 
        }
    });

   
    function fetchUsers(page) {
        let searchInput = document.getElementById("searchInput").value;
        fetch(`/admin/users?page=${page}&search=${encodeURIComponent(searchInput)}`)
            .then(response => response.text())
            .then(data => {
                let parser = new DOMParser();
                let doc = parser.parseFromString(data, "text/html");

              
                document.querySelector(".users-container").innerHTML = doc.querySelector(".users-container").innerHTML;
                document.querySelector(".pagination").innerHTML = doc.querySelector(".pagination").innerHTML;
            })
            .catch(error => console.error("Error fetching users:", error));
    }
});


//------------------------


function confirmBlock(customerId) {
        Swal.fire({
            title: "Are you sure?",
            text: "Do you really want to block this customer?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#d33",
            cancelButtonColor: "#3085d6",
            confirmButtonText: "Yes, block it!"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/admin/blockCustomer?id=${customerId}`;
            }
        });
    }

    function confirmUnblock(customerId) {
        Swal.fire({
            title: "Are you sure?",
            text: "Do you really want to unblock this customer?",
            icon: "question",
            showCancelButton: true,
            confirmButtonColor: "#28a745",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, unblock it!"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/admin/unblockCustomer?id=${customerId}`;
            }
        });
    }

     </script>
    
</body>
</html>
